<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.miapp.admin.controllers.PracticasController"
      spacing="15">

    <!-- Padding corregido -->
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Encabezado con título y botón -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Prácticas del Auxiliar" fx:id="lblTitulo" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Nueva práctica" fx:id="btnNuevaPractica"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" onAction="#abrirNuevaPractica"/>
    </HBox>

    <!-- Tabla de prácticas -->
    <TableView fx:id="tablaPracticas" VBox.vgrow="ALWAYS" prefHeight="450">
        <columns>
            <!--<TableColumn text="ID" fx:id="colId" prefWidth="60"/>-->
            <TableColumn text="Práctica" fx:id="colPractica" prefWidth="100"/>
            <TableColumn text="Fecha inicio" fx:id="colFechaInicio" prefWidth="100"/>
            <TableColumn text="Fecha fin" fx:id="colFechaFin" prefWidth="100"/>
            <!--<TableColumn text="Descripción" fx:id="colDescripcion" prefWidth="250"/>-->
            <TableColumn text="Acciones" fx:id="colAcciones" prefWidth="200"/>
        </columns>
    </TableView>

</VBox>

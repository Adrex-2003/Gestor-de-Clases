<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.miapp.admin.controllers.SesionesFormController"
      spacing="15">

    <!-- Padding correcto -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Nueva Sesión" styleClass="titulo-sesiones"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Fecha:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dpFecha" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Descripción:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtDescripcion" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Guardar" fx:id="btnGuardar" styleClass="btn-nueva-sesion"/>
        <Button text="Cancelar" fx:id="btnCancelar" styleClass="btn-estudiante"/>
    </HBox>

</VBox>

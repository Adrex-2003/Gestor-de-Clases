<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.miapp.admin.controllers.SesionesController">

    <center>
        <VBox spacing="15" style="-fx-padding: 15; -fx-background-color: #f5f5f5;">
            
            <!-- Encabezado con título y botón -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Sesiones" styleClass="titulo-sesiones"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="Crear nueva sesión" styleClass="btn-nueva-sesion" fx:id="btnNuevaSesion"/>
            </HBox>

            <!-- Tabla de sesiones -->
            <TableView fx:id="tablaSesiones" prefHeight="450" VBox.vgrow="ALWAYS" styleClass="table-sesiones">
                <columns>
                    <TableColumn text="ID" fx:id="colId" prefWidth="60"/>
                    <TableColumn text="Fecha" fx:id="colFecha" prefWidth="150"/>
                    <TableColumn text="Descripción" fx:id="colDescripcion" prefWidth="300"/>
                    <TableColumn text="Acciones" fx:id="colAcciones" prefWidth="220"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>

        </VBox>
    </center>

</BorderPane>
